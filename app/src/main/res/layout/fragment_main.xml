<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE THERMOMETERS"
            android:id="@+id/buttonPUT"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_margin="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD THERMOMETER"
            android:id="@+id/buttonPOST"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_margin="1dp" />


    </LinearLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temperatures_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/table_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/sensor_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.5"
                android:text="@string/sensor_column_title"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/temperature_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.5"
                android:text="@string/temperature"
                android:textColor="#000000"
                android:textSize="15sp" />

        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/temperatures_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/thermostat_column"
                android:padding="5dp"
                android:layout_weight="0.33"
                android:text="@string/thermostat_names"
                android:textColor="#000000"
                android:textSize="15sp"
              />

            <TextView
                android:id="@+id/sensors_column"
                android:layout_weight="0.33"
                android:padding="5dp"
                android:text="@string/sensors"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/active_column"
                android:layout_weight="0.33"
                android:padding="5dp"
                android:text="@string/active"
                android:textColor="#000000"
                android:textSize="15sp" />

        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/thermostat_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
    </TableLayout>
</LinearLayout>
